<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Make a booking with a coach</h3>
        <%= simple_form_for [@slot, @order], url: slot_orders_path do |f| %>
          <%= f.input :duration, collection: 1..10 %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
