<h1 class="text-center">Checkout</h1>
<div class="container mx-auto">
  <div class="row">
    <div class="col-sm-6">
      <div class="card border p-3 h-100 my-1">
        <p class="font-weight-bolder">Your Order</p>
        <div class="d-flex align-items-center">
          <img src=<%=@order.slot.user.profile_picture%> alt="", style="width:200px;">
          <%= @slot.start.strftime("%l:%M %p") %> to <%= @slot.end.strftime("%l:%M %p") %> with <%= @order.slot.user.username %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card border p-3 h-100">
        <p class="font-weight-bolder">Your Details</p>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Currency</label>
              <select class="form-control" id="exampleFormControlSelect1">
                <option>USD</option>
                <option>SGD</option>
                <option>RMB</option>
                <option>AUD</option>
                <option>CAD</option>
              </select>
            </div>
            <div class="d-flex justify-content-between">
              <div class="amount">
                <p class="mt-5 font-weight-bolder">Your Total</p>
                <h3><%= humanized_money_with_symbol(@order.paid_amount) %></h3>
              </div>
            </div>
          <%=simple_form_for([@slot,@order]) do |f|%>
            <%=f.button :submit, class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
