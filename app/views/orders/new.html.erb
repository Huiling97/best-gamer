<h1>Checkout</h1>
<div class="d-flex container">
  <div id="order-details">
  </div>
  <div id="payment">
  </div>
</div>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Make a booking with <%= @slot.user.username %> on <%= @slot.date %></h3>
        <%= simple_form_for [@slot, @order], url: slot_orders_path do |f| %>
          <%= f.input :duration, collection: 1..10 %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
