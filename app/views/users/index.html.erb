<div>
  <h1>Our Coaches</h1>
  <p>Become the better gamer in League of Legends. Get coaching to reach Challenger!</p>
</div>

<%= form_with url: "#", method: :get do |f| %>
  <%= f.label :username, "Search for coach by name:" %>
  <%= f.text_field :filter_username %>
  <%= f.label :country %>
  <%= f.text_field :filter_country %>
  <%= f.label :min_price %>
  <%= f.text_field :min_price %>
  <%= f.label :max_price %>
  <%= f.text_field :max_price %>
  <%= f.submit "Search" %>
<% end %>

<%= render @users %>
