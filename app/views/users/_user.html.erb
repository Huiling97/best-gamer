<div class="col-3 my-3">
    <div class="card bg-custom h-100">

    <%= link_to "/#{user.username.gsub(" ","")}" do %>

      <%= image_tag(user.profile_picture, class: "d-block mx-auto") %>

      <div class="card-body custom-text">
        <h3 class="card-title text-center"><%= user.username %></h3>
        <p class="card-text">$<%= user.rates %>/hr</p>
        <p class="card-text ">Orders Completed:</p>
        <p class="card-text"><%= user.profile_content.truncate(40) %></p>
      </div>

      <div class="btn-margin">
        <a class="btn btn-dark btn-center-custom" href=<%="/#{user.username.gsub(" ","")}"%> class="btn btn-primary">Find out more</a>
      </div>
    <% end %>
  </div>
</div>
