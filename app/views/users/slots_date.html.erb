<h1>Slots for <%=@user.username%></h1>
<h3 class="text-center mb-5"><%=@date.strftime("on %d %b %Y, %A")%></h3>

<div class="container">
  <%if @availables.empty?%>
    <h4>Nothing here</h4>
  <% else %>
    <% @availables.each do |slot| %>
      <div class="card bg-secondary px-3">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title mt-2"><%= slot.start.strftime("%l:%M %p") %> to <%= slot.end.strftime("%l:%M %p") %></h5>
          </div>
          <div>
            <a href=<%=new_slot_order_path(slot)%> class="btn btn-primary">Book now</a>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class='container d-flex align-items-center justify-content-center mt-4'>
  <%= link_to "Back to User", "/#{params[:username]}", :class=>'btn btn-primary' %>
</div>
